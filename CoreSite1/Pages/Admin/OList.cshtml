    <script>
        $(document).ready(function () {
           /* $("#myImg").val("src");*/
           
            //for each #myimg get src and reset src.
            $('Img[id^="myImg"]').each(function () {
                //alert($(this).attr('src'));
                /*var d = imgurl($(this).attr('src'));*/
                var returnuri;
                const uri = '/api/JSTProducts/' + $(this).attr('alt');
                //alert(uri);

                fetch(uri, {
                    method: 'GET'
                })
                    .then(response => response.json())
                    .then(data => _displayItems(data))
                    .catch(error => console.error('Unable to get items.', error));
                function _displayItems(data) {
                    //alert(JSON.stringify(data));
                    returnuri = data.productArtUrl;
                   // alert(returnuri);
                    $(this).attr('src', returnuri);
                    //returnuri = data.productArtUrl;
                    //alert($(this).attr('src'));
                }

               
            });
           ///('#myImg').attr('src', d);
        });


        function imgurl(ids) {
            //alert(1);
           
            var returnuri;
            const uri = '/api/JSTProducts/' + ids;
            //alert(uri);
            
            fetch(uri, {
                method: 'GET'
            })
                .then(response => response.json())
                .then(data => _displayItems(data))
                .catch(error => console.error('Unable to get items.', error));
            function _displayItems(data) {
                //alert(JSON.stringify(data));
                returnuri = data.productArtUrl;
                alert(returnuri);
                
                //returnuri = data.productArtUrl;
            }
            //alert(returnuri);
            return returnuri;
        }
    </script>
  
    <script>

        // Get the modal
        var modal = document.getElementById("myModal");

        $(document).ready(function () {
            $(".table img").on('click', function () {
                var modalImg = document.getElementById("img01");
                var captionText = document.getElementById("caption");
                //img.onclick = function () {
                modal.style.display = "block";
                modalImg.src = this.src;
                captionText.innerHTML = this.alt;
                //alert('bb');
            });

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

        });
    </script>
