@model CoreSite1.Pages.Admin.Status.OrderStatusModel

@{
    ViewData["Title"] = "OrderStatus";
    ////Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

@*<h1>OrderStatus</h1>*@

@*<p>
        <a asp-page="Create">Create New</a>
    </p>*@
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Order Status</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Status</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">

    <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-money-bill-wave"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Waiting For Payment</span>
                        <span class="info-box-number">
                            10
                            @*<small>%</small>*@
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-2">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-book-reader"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Verified</span>
                        <span class="info-box-number">41,410</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix hidden-md-up"></div>
            <div class="col-12 col-sm-6 col-md-2">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-book"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Confirmed</span>
                        <span class="info-box-number">760</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-2">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-fuchsia elevation-1"><i class="fas fa-book-open"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Reopened</span>
                        <span class="info-box-number">2,000</span>
                    </div>
                    <!-- /.info-box-content Reopened -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-2">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-closed-captioning"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Closed</span>
                        <span class="info-box-number">2,000</span>
                    </div>
                    <!-- /.info-box-content  -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="card">
                <div class="card-header border-transparent">
                    @*<h3 class="card-title">Variants</h3>*@
                    @*<div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>*@
                </div>

                <div class="card-header border-0">
                    <form asp-page="./OrderStatus" method="get">
                        @*<div class="form-actions no-color">
                            <p>
                                UserID, Order ID:
                                <input type="text" name="SearchString" value="@Model.CurrentFilter" />
                                
                                <input type="submit" value="Search" class="btn btn-default" /> |
                                <a asp-page="./OrderStatus">Back to full List</a>
                            </p>
                        </div>*@
                        <div class="form-inline">
                            <div class="input-group" data-widget="sidebar-search">
                                <div class="form-actions no-color">
                                    <p>
                                        UserID, Order ID:
                                        <input type="search" class="form-control form-control-sidebar" name="SearchString" value="@Model.CurrentFilter" placeholder="Search" aria-label="Search" />
                                        <button class="btn btn-sidebar">
                                            <i class="fas fa-search fa-fw"></i>
                                        </button>
                                        |<a asp-page="./OrderStatus">Back to full List</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                  Order @Html.DisplayNameFor(model => model.Order[0].Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Order[0].PaymentStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Order[0].ShippingMethod)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Order[0].ShippingAmount)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Order[0].ShippingDate)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Order[0].TransactionID)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Order[0].TrackingID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Order[0].Address)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Order)
                            {
                            <tr>
                                <td>

                                    @Html.DisplayFor(modelItem => item.Status)
                                    OrderID:@Html.DisplayFor(modelItem => item.OrderId)<hr />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippingMethod)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ShippingAmount)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippingDate)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.TransactionID)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrackingID)
                                </td>
                                <td>
                                    <ul class="list-unstyled">
                                        <li>@Html.DisplayFor(modelItem => item.Address.Phone)</li>
                                        <li>@Html.DisplayFor(modelItem => item.Address.FirstName) @Html.DisplayFor(modelItem => item.Address.LastName)</li>
                                        @*<li>@Html.DisplayFor(modelItem => item.Address.Street)</li>*@
                                        <li>@Html.DisplayFor(modelItem => item.Address.City) @*@Html.DisplayFor(modelItem => item.Address.State)*@</li>
                                        @*<li>@Html.DisplayFor(modelItem => item.Address.Country)-@Html.DisplayFor(modelItem => item.Address.PostalCode) </li>*@
                                    </ul>


                                </td>
                                <td>
                                    @*<a asp-page="~/Order/Edit" asp-route-id="@item.OrderId">Edit</a> |*@
                                    <a href="~/Order/Edit?id=@item.OrderId">Edit@*~/Pages/Order/Edit.cshtml*@</a> |
                                    <a href="~/Order/Details?id=@item.OrderId">Details@*~/Pages/Order/Edit.cshtml*@</a> |
                                    @*<a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>*@
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @{
                        var prevDisabled = !Model.Order.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.Order.HasNextPage ? "disabled" : "";
                    }
                    <a asp-page="./Index"
                       asp-route-pageIndex="@(Model.Order.PageIndex - 1)"
                       asp-route-currentFilter="@Model.CurrentFilter"
                       class="btn btn-default @prevDisabled">
                        Previous
                    </a>
                    <a asp-page="./Index"
                       asp-route-pageIndex="@(Model.Order.PageIndex + 1)"
                       asp-route-currentFilter="@Model.CurrentFilter"
                       class="btn btn-default @nextDisabled">
                        Next
                    </a>

                </div>
            </div>
            <!-- The Modal -->
            @*<div id="myModal" class="modal">

                <!-- The Close Button -->
                <span class="close">&times;</span>

                <!-- Modal Content (The Image) -->
                <img class="modal-content" id="img01">

                <!-- Modal Caption (Image Text) -->
                <div id="caption"></div>
            </div>*@
        </div>
        <!-- /.row -->

    </div><!--/. container-fluid -->
</section>



