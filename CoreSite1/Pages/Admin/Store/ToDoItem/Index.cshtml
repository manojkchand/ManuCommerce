}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].Done)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].IsCalenderEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].CalenderEventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].AddedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoItem[0].AddedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ToDoItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCalenderEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalenderEventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
